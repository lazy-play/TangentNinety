<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground"
    android:focusableInTouchMode="false"
    tools:openDrawer="start">
    <com.pudding.tangentninety.weight.InsetRelativeLayout
        android:id="@+id/start_bar_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.pudding.tangentninety.weight.InsetFrameLayout
        android:id="@+id/main_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </com.pudding.tangentninety.weight.InsetRelativeLayout>

    <com.pudding.tangentninety.weight.InsetNavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="?attr/colorUnselectBackground"
        app:headerLayout="@layout/nav_header"
        app:itemIconTint="?attr/colorNavigation"
        app:itemTextColor="?attr/colorNavigation"
        app:menu="@menu/menu_main_drawer"
        android:layout_gravity="start"/>
</android.support.v4.widget.DrawerLayout>